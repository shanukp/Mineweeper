{
    "name": "Zynga.Zdk.Services.Graph",
    "file-filters":
        [
            "Assets/Zynga/Zdk/Services/Graph/",
            "-Assets/Zynga/Zdk/Services/Graph/Zoom/",
            "-Assets/Zynga/Zdk/Services/Graph/Gateway/",
            "-Assets/Zynga/Zdk/Services/Graph/Editor/Tests/",
            "-Assets/Zynga/Zdk/Services/Graph/DocTemplates/",
            "-Assets/Zynga/Zdk/Services/Graph/IntegrationTests"
        ],
    "dependent-packages":
        [
            "Zynga.Core.Util",
            "Zynga.Core.JsonUtil",
            "Zynga.Core.Net",
            "Zynga.Core.Tasks",
            "Zynga.Core.ZLogger",
            "Zynga.Zdk.Services.Common",
            "Zynga.Metrics.Analytics"
        ],
    "options":
        [
            {
                "name": "use-gateway",
                "_comments": "Allows the client to receive Gateway notifications related to the Graph Service (primarily used for under-the-hood state cleanup).",
                "file-filters":
                    [
                        "Assets/Zynga/Zdk/Services/Graph/Gateway/"
                    ],
                "dependent-packages":
                    [
                        "Zynga.Zdk.Services.Gateway"
                    ]
            },
            {
                "name": "use-gateway-tests",
                "_comments": "Unit tests for gateway integration for the Graph service.",
                "file-filters":
                [
                    "Assets/Zynga/Zdk/Services/Graph/Gateway/Editor/Tests"
                ],
                "dependent-options":
                [
                    "use-gateway",
                    "tests"
                ]
            },
            {
                "name": "use-zoom",
                "_comments": "Allows the client to receive Zoom notifications related to the Graph Service (primarily used for under-the-hood state cleanup).",
                "file-filters":
                    [
                        "Assets/Zynga/Zdk/Services/Graph/Zoom/"
                    ],
                "dependent-packages":
                    [
                        "Zynga.Zdk.Services.Zoom"
                    ]
            },
            {
                "name": "use-zoom-tests",
                "_comments": "Unit tests for zoom integration for the Graph service.",
                "file-filters":
                [
                    "Assets/Zynga/Zdk/Services/Graph/Zoom/Editor/Tests"
                ],
                "dependent-options":
                [
                    "use-zoom",
                    "tests"
                ]
            },
            {
                "name": "tests",
                "_comments": "Tests-specific code for the Graph service.",
                "file-filters":
                    [
                        "Assets/Zynga/Zdk/Services/Graph/Editor/Tests/"
                    ],
                "dependent-packages":
                    [
                        "NUnit",
                        "NSubstitute"
                    ]
            },
            {
                "name": "examples",
                "_comments": "Installs documentation template and example code files.",
                "file-filters":
                    [
                        "Assets/Zynga/Zdk/Services/Graph/DocTemplates/"
                    ]
            }
        ],
    "metadata":
        {
            "documentation-merger-script": "Assets/Zynga/Zdk/Services/Graph/DocTemplates"
        },
    "base-jenkins-jobs-config": "unitytech-unity-console",
    "build-configs":
    {
        "default":
        {
            "min-code-coverage": 80,
            "required-defines": [ "ASSERTIONS_ENABLED" ]
        },
        "dotnet_core":
        {
            "platforms": [ "console" ],
            "option-sets":
            [
                {
                    "name": "tests",
                    "options":  [ "tests" ]
                }
            ]
        },
        "unity":
        {
            "platforms": [ "ios", "android", "webgl" ],
            "min-supported-version": "5.6",
            "option-sets":
            [
                {
                    "name": "testsAndExamples",
                    "options": [ "tests", "examples" ]
                },
                {
                    "name": "useZoom",
                    "options":  [ "use-zoom", "use-zoom-tests" ]
                }
            ]
        }
    }
}
