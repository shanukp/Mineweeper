{
	"name": "Zynga.Core.Tasks",
	"file-filters":
		[
			"Assets/Zynga/Core/Tasks",
			"-Assets/Zynga/Core/Tasks/Unity",
            "-Assets/Zynga/Core/Tasks/Editor/Tests",
            "-Assets/Zynga/Core/Tasks/Editor/TestUtils",
            "-Assets/Zynga/Core/Tasks/DocTemplates/",
            "-Assets/Zynga/Core/Tasks/IntegrationTests"
		],
	"dependent-packages":
        [
            "Zynga.Core.Util",
            "Zynga.Core.ZLogger",
            "Zynga.Core.ErrorHandling"
        ],
	"options":
        [
            {
                "name": "examples",
                "_comments": "Installs documentation templates and examples code files.",
                "file-filters":
                [
                    "Assets/Zynga/Core/Tasks/DocTemplates/"
                ],
                "dependent-packages":  
                [   
                    "Zynga.Core.UnityUtil"  
                ]
            },
            {
                "name": "unity",
                "_comments": "Unity-specific implementations of Tasks and supporting classes.",
                "file-filters":
                    [
                        "Assets/Zynga/Core/Tasks/Unity"
                    ],
                "dependent-packages":
                	[
                		"Zynga.Core.UnityUtil"
                	]
            },
            {
                "name": "test-utils",
                "_comments": "Test utility code. Can also be used as a dependency for tests in other packages.",
                "file-filters":
                    [
                        "Assets/Zynga/Core/Tasks/Editor/TestUtils"
                    ],
                "dependent-packages":
                    [
                        "NUnit"
                    ]
            },
            {
                "name": "tests",
                "_comments": "Tests-specific code for Tasks.",
                "file-filters":
                    [
                        "Assets/Zynga/Core/Tasks/Editor/Tests"
                    ],
                "dependent-packages":
                    [
                        {
                            "name": "Zynga.Core.Util",
                            "use-options":
                            [
                                "test-utils"
                            ]
                        },
                        "NUnit",
                        "NSubstitute"
                    ],
                "dependent-options":
                    [
                        "test-utils"
                    ]
            }
        ],
    "metadata":
        {
            "documentation-merger-script":
            "Assets/Zynga/Core/Tasks/DocTemplates"
        },
    "build-configs":
    {
        "default": 
        {
            "min-code-coverage": 95,
            "required-defines": [ "ASSERTIONS_ENABLED" ],
            "define-sets":
            [
                {
                    "name": "none",
                    "defines": [ ]
                },
                {
                    "name": "obsolete_methods",
                    "defines": [ "DISABLE_ZYNGA_CORE_TASKS_EXCEPTION_OBSOLETE", "DISABLE_TASK_DELAY_OBSOLETE", "DISABLE_TASK_WHENALL_OBSOLETE", "DISABLE_TASK_WHENANY_OBSOLETE", "DISABLE_TIMESPAN_WARNING", "DISABLE_ZYNGA_CORE_TASKS_CALLBACK_AND_FORWARD_ERRORS_OBSOLETE", "DISABLE_ZTASKEXTENSIONS_COROUTINE_OBSOLETE" ]
                }
            ]
        },
        "dotnet_core":
        {
            "platforms": [ "console" ],
            "option-sets": 
            [
                {
                    "name": "tests",
                    "options":  [ "tests", "test-utils" ]
                }
            ]
        },
        "unity": 
        {
            "platforms": [ "ios", "android", "webgl" ],
            "min-supported-version": "5.6",
            "option-sets": 
            [
                {
                    "name": "testsAndExamples",
                    "options":  [ "tests", "test-utils", "examples" ]
                }
            ]
        }
    }
}
