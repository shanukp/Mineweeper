{
    "name": "Zynga.Zdk.Services.Common",
    
    "file-filters":
        [
            "Assets/Zynga/Zdk/Services/Common",
            "-Assets/Zynga/Zdk/Services/Common/Unity",
            "-Assets/Zynga/Zdk/Services/Common/Editor/Tests",
            "-Assets/Zynga/Zdk/Services/Common/DocTemplates"
        ],

    "dependent-packages":
        [
            "Zynga.Core.Util",
            "Zynga.Core.JsonUtil",
            "Zynga.Core.ZLogger",
            "Zynga.Core.Net",
            "Zynga.Core.Tasks",
            "Zynga.Core.ErrorHandling",
            "Zynga.Core.Platform"
        ],
    "options":
        [
            {
                "name": "examples",
                "_comments": "Installs documentation templates and examples code files.",
                "file-filters":
                [
                    "Assets/Zynga/Zdk/Services/Common/DocTemplates/"
                ],
                "dependent-packages":
                [
                    "Zynga.Core.UnityUtil"
                ]
            },
            {
                "name": "tests",
                "_comments": "Tests-specific code for Services Common.",
                "file-filters":
                    [
                        "Assets/Zynga/Zdk/Services/Common/Editor/Tests"
                    ],
                "dependent-packages":
                    [
                        "NUnit",
                        "NSubstitute"
                    ]
            }
        ],
    "metadata":
        {
            "documentation-merger-script":
            "Assets/Zynga/Zdk/Services/Common/DocTemplates"
        },
    "build-configs":
    {
        "default": 
        {
            "min-code-coverage": 75,
            "required-defines": [ "ASSERTIONS_ENABLED" ]
        },
        "dotnet_core":
        {
            "platforms": [ "console" ],
            "option-sets": 
            [
                {
                    "name": "tests",
                    "options":  [ "tests" ]
                }
            ]
        },
        "unity": 
        {
            "platforms": [ "ios", "android", "webgl" ],
            "min-supported-version": "5.6",
            "option-sets": 
            [
                {
                    "name": "testsAndExamples",
                    "options":  [ "tests", "examples" ]
                }
            ]
        }
    }
}
