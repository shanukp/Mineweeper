{
    "name": "Zynga.Authentication.Facebook",
    "file-filters":
    [
        "Assets/Zynga/Authentication/Channels/Facebook",
        "-Assets/Zynga/Authentication/Channels/Facebook/Unity",        
        "-Assets/Zynga/Authentication/Channels/Facebook/Editor/Tests",
        "-Assets/Zynga/Authentication/Channels/Facebook/IntegrationTests",
        "-Assets/Zynga/Authentication/Channels/Facebook/DocTemplates/"
    ],
    "dependent-packages":
    [
        "Zynga.Authentication",
        "Zynga.Core.Tasks",
        "Zynga.Core.Util",
        "Zynga.Zdk.Services.Identity",
        "Zynga.Core.ErrorHandling"
    ],
    "options":
    [
        {
            "name": "unity",
            "_comments": "Unity-specific code for Zynga.Authentication.Facebook.",
            "file-filters":
            [
                "Assets/Zynga/Authentication/Channels/Facebook/Unity"
            ],
            "dependent-packages":
            [
                "FacebookUnitySDK"
            ]
        },
        {
            "name": "tests",
            "_comments": "Tests-specific code for the ZIS Facebook authentication.",
            "file-filters":
            [
                "Assets/Zynga/Authentication/Channels/Facebook/Editor/Tests",
                "Assets/Zynga/Authentication/Facebook/CodeCoverage.json"
            ],
            "dependent-packages":
            [
                "NUnit",
                "NSubstitute"
            ]
        },
        {
            "name": "examples",
            "_comments": "Installs documentation template and example code files.",
            "file-filters":
            [
                "Assets/Zynga/Authentication/Channels/Facebook/DocTemplates/"
            ]
        }
    ],
    "metadata":
    {
        "documentation-merger-script":
        [
            "Assets/Zynga/Authentication/Channels/Facebook/DocTemplates"
        ]
    },
    "build-configs":
    {
        "default":
        {
            "min-code-coverage": 80,
            "required-defines": [ "ASSERTIONS_ENABLED" ]
        },
        "unity":
        {
            "platforms": [ "ios", "android", "webgl" ],
            "min-supported-version": "5.6",
            "option-sets":
            [
                {
                    "name": "testsAndExamples",
                    "options":  [ "tests", "examples" ]
                }
            ]
        }
    }
}
