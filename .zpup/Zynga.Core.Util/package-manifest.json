{
    "name": "Zynga.Core.Util",
    "file-filters":
        [
            "Assets/Zynga/Core/Util",
            "-Assets/Zynga/Core/Util/Editor/Tests",
            "-Assets/Zynga/Core/Util/Editor/TestUtils",
            "-Assets/Zynga/Core/Util/DocTemplates/"
        ],
    "dependent-packages":
        [
            "Zynga.Core.ErrorHandling"
        ],
    "options":
        [
            {
                "name": "test-utils",
                "_comments": "Test utility specific code.",
                "file-filters":
                    [
                        "Assets/Zynga/Core/Util/Editor/TestUtils"
                    ],
                "dependent-packages":
                    [
                        "NUnit"
                    ]
            },
            {
                "name": "tests",
                "_comments": "Tests-specific code for Core.Util.",
                "file-filters":
                    [
                        "Assets/Zynga/Core/Util/Editor/Tests"
                    ],
                "dependent-packages":
                    [
                        "NUnit",
                        "NSubstitute"
                    ],
                "dependent-options":
                    [
                        "test-utils"
                    ]
            },
            {
                "name": "examples",
                "_comments": "Installs documentation templates and examples code files.",
                "file-filters":
                [
                    "Assets/Zynga/Core/Util/DocTemplates/"
                ]
            }
        ],
    "metadata":
    {
        "documentation-merger-script": "Assets/Zynga/Core/Util/DocTemplates"
    },
    "build-configs": 
    {
        "default": 
        {
            "min-code-coverage": 95,
            "define-sets": 
            [
                {
                    "name": "none",
                    "defines": [ ]
                },
                {
                    "name": "enableResultErrorChecking",
                    "defines": [ "ENABLE_RESULT_ERROR_CHECKING" ]
                },
                {
                    "name": "production",
                    "defines": [ "PRODUCTION" ]
                }
            ],
            "required-defines": [ "ASSERTIONS_ENABLED" ]
        },
        "dotnet_core": 
        {
            "platforms": [ "console" ],
            "option-sets": 
            [
                {
                    "name": "tests",
                    "options":  [ "tests", "test-utils" ]
                }
            ]
        },
        "unity": 
        {
            "platforms": [ "ios", "android", "webgl" ],
            "min-supported-version": "5.6",
            "option-sets": 
            [
                {
                    "name": "testsAndExamples",
                    "options":  [ "tests", "test-utils", "examples" ]
                }
            ]
        }
    }
}
